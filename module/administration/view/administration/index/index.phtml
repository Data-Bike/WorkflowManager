<html style="width: 100%; height: 100%; margin:0px;">
    <head>
        <title>TODO supply a title</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="js/dijit/themes/claro/claro.css" />
        <link rel="stylesheet" href="js/dojox/form/resources/ListInput.css" />
        <!--<link rel="stylesheet" href="js/dojox/grid/resources/Grid.css" />-->
        <link rel="stylesheet" href="js/dijit/themes/claro/document.css"/>
        <link rel="stylesheet" href="js/dojox/widget/Toaster/Toaster.css"/>
        <link rel="stylesheet" href="js/dojox/grid/resources/claroGrid.css"/>
        <link rel="stylesheet" href="js/dojox/form/resources/CheckedMultiSelect.css"/>
        <script src="js/dojo/dojo.js" data-dojo-config="isDebug: true, async: true"></script>
        <style type="text/css">

            .dojoxGrid table {
                margin: 0;
            }
        </style>
    </head>
    <body class="claro" style="width: 100%; height: 100%; margin:0px;">
        <div data-dojo-type="dijit/layout/BorderContainer" id="bc"  style="width: 100%; height: 100%; margin:0px;">
            <div data-dojo-type="dijit/layout/ContentPane"  data-dojo-props="region:'top'" style="margin:0px;">
                <div data-dojo-type="dijit/layout/BorderContainer" id="bc2"  style="margin:0px;padding: 0px; width: 100px; height: 30px;">
                    <div data-dojo-type="dijit/form/Button" id='exitButton' data-dojo-props="region:'right'" >Выход </div>
                    <div data-dojo-type="dijit/form/Button" id='taskButton' data-dojo-props="region:'right'" >К задачам </div>
                    <div data-dojo-type="dijit/form/Button" id='allButton' data-dojo-props="region:'leading'" >Все </div>
                    <div data-dojo-type="dijit/form/Button" id='clearButton' data-dojo-props="region:'leading'" >Очистить форму </div>
                </div>
            </div>
            <div data-dojo-type="dijit/layout/ContentPane" id="leftCP"  data-dojo-props="region:'leading',splitter:true" style="width:45%; height: 90%; margin:0px;"><div data-dojo-type="wm/user"  id="userForm" style="width: 100%; height: 100%; margin:0px;"></div></div>
            <div data-dojo-type="dijit/layout/ContentPane" id="rightCP" data-dojo-props="region:'center'"><div data-dojo-type="wm/usersgrid"  id="userGrid" style="width: 100%; height: 100%; margin:0px;"></div></div>
        </div>
        <div data-dojo-type="dojox/widget/Toaster" data-dojo-props="positionDirection:'br-left'"
             id="first_toaster">
        </div>
        <script>
            require([
                "dojo/parser",
                "dijit/layout/BorderContainer",
                "dijit/layout/ContentPane",
                "wm/user",
                "wm/usersgrid",
                "wm/userslist",
                "wm/taskselector",
                "dojo/io-query",
                "dojo/json",
                "dojo/aspect",
                "dijit/registry",
                "dojox/widget/Toaster"
            ], function (parser, BorderContainer, ContentPane, task, tasksgrid, userslist, taskselector, ioQuery, JSON, aspect, registry, Toaster) {


                parser.parse();

                var self = this;
                var userForm = dijit.byId('userForm');
                var userGrid = dijit.byId('userGrid');
                var exitButton = dijit.byId('exitButton');
                var taskButton = dijit.byId('taskButton');
                var allButton = dijit.byId('allButton');
                var clearButton = dijit.byId('clearButton');
                var leftCP = dijit.byId('leftCP');
                var rightCP = dijit.byId('rightCP');

                exitButton.on('click', function () {
                    document.location.href = '/logout';
                });

                taskButton.on('click', function () {
                    document.location.href = '/';
                });

                allButton.on('click', function () {
                    userGrid.dg.setQuery('');
                });

                clearButton.on('click', function () {
                    userForm.clear();
                });

                var bc = registry.byId('bc').getSplitter("leading");
                aspect.after(bc, "resize", function () {
                    userForm.bc.resize();
                    userGrid.dg.resize();
                });
                userForm.viewButton.on('click', function () {
                    console.log(bc);
                    userGrid.dg.setQuery('?' + ioQuery.objectToQuery(userForm.getJS()));
                });
                userForm.saveButton.on('click', function () {
                    if (!userGrid.userStore.userId) {
                        userGrid.userStore.objectStore.add(userForm.getJS()).then(function (result) {
                            dijit.byId('first_toaster').setContent('Пользователь создан', 'message');
                            dijit.byId('first_toaster').show();
                            userGrid.userStore.userId = result.id;
                        }, function (result) {
                            if (result.response.status == '403') {
                                dijit.byId('first_toaster').setContent('Увас нет прав. Пользователь не создан.', 'error');
                            } else {
                                dijit.byId('first_toaster').setContent('Произошла ошибка. Пользователь не создан.', 'error');
                            }
                            dijit.byId('first_toaster').show();

                        });
                    } else {
                        userGrid.userStore.objectStore.put(JSON.stringify(userForm.getJS()), {id: userGrid.userStore.userId});
                    }
                });

                userGrid.dg.on('SelectionChanged', function () {
                    console.log(userGrid.dg.selection.getSelected()[0]);
                    userForm.set('value', userGrid.dg.selection.getSelected()[0]);
                    userGrid.userStore.userId = userGrid.dg.selection.getSelected()[0].id;
                });

            });
        </script>
    </body>
</html>